programa {
  funcao inicio() {
    real num1, num2, num3, num4, dif
    
    escreva("Informe o número 01: ")
    leia(num1)
    escreva("Informe o número 02: ")
    leia(num2)
    escreva("Informe o número 03: ")
    leia(num3)
    escreva("Informe o número 04: ")
    leia(num4)
    dif = (num1 * num2) - (num3 * num4)
    escreva("A diferença do produto entre os dois primeiros números e os dois últimos números é: " + dif)
  }
}
